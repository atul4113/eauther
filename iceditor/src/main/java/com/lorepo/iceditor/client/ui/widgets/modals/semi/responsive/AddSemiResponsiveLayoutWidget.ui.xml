<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:content="urn:import:com.lorepo.iceditor.client.ui.widgets.content"
	xmlns:r="urn:import:com.lorepo.iceditor.client.semi.responsive.ui.widgets">
	<ui:style>
	</ui:style>
	
	<g:HTMLPanel styleName="modal-box prompt" ui:field="panel">
		<span ui:field="title"></span>
		<br/>
		<br/>
		<span ui:field="textBefore"></span>
		<div class="semi-responsive-layout-modal-form-container">
			<div class="semi-responsive-layout-row">
				<span class="semi-responsive-layout-row-label" ui:field="nameLabel"></span>
				<input type="text" ui:field="nameInput"></input>
			</div>
			<div class="semi-responsive-layout-row">
				<span class="semi-responsive-layout-row-label" ui:field="thresholdLabel"></span>
				<input type="text" ui:field="thresholdInput"></input>
			</div>
			<r:SemiResponsiveOrientationDeviceSelectorWidget ui:field="deviceOrientationWidget">
			</r:SemiResponsiveOrientationDeviceSelectorWidget>
		</div>
		<div class="add-new-semi-responsive-layout-modal-row add-new-semi-responsive-layout-modal-action-controls">
			<a class="accept" ui:field="addButton"></a>
			<a class="decline" ui:field="declineButton"></a>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 