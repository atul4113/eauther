<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel ui:field="panel" styleName="mainPage left">
		<div class="mainPageHeader">
				<h3 ui:field="title"></h3>
				<a class="mainPageCloseBtn closeWidgetLocker"></a>
			</div>
			<div id="settingsPage-contents" class="contents">
				<div class="settingsCheckBox">
					<label for="staticHeaderOption" ui:field="staticHeaderLabel" />
					<input type="checkbox" ui:field="staticHeader"/>
				</div>
				
				<div class="settingsCheckBox">
					<label for="staticFooterOption" ui:field="staticFooterLabel" />
					<input type="checkbox" ui:field="staticFooter"/>
				</div>
				
				<div class="settingsCheckBox">
					<label for="useGridOption" ui:field="useGridLabel" />
					<input type="checkbox" ui:field="useGrid"/>
				</div>
				
				<div class="settingsCheckBox">
					<label for="gridSize" ui:field="gridSizeLabel" />
					<input ui:field="gridSize"/>
				</div>
				
				<div class="settingsCheckBox">
					<label for="useGridSnappingOption" ui:field="useGridSnappingLabel" />
					<input type="checkbox" ui:field="useGridSnapping"/>
				</div>
				
				<div class="settingsCheckBox">
					<label for="useRulersOption" ui:field="useRulersLabel" />
					<input type="checkbox" ui:field="useRulers"/>
				</div>
				
				<div class="settingsCheckBox">
					<label for="useRulersSnappingOption" ui:field="useRulersSnappingLabel" />
					<input type="checkbox" ui:field="useRulersSnapping"/>
				</div>
				<div class="settingsCheckBox">
					<label for="gridSize" ui:field="langLabel" />
					<input ui:field="lang"/>
				</div>
				<div class="settingsCheckBox">
					<label for="enableTabindexOption" ui:field="enableTabindexLabel" />
					<input type="checkbox" ui:field="enableTabindex"/>
				</div>
				<div class="settingsCheckBox">
					<label for="sortRightToLeftOption" ui:field="sortRightToLeftLabel" />
					<input type="checkbox" ui:field="sortRightToLeft"/>
				</div>
			</div>
			<div class="settingsControls">
				<a class="controlsBtn" ui:field="apply" />
				<a class="controlsBtn" ui:field="save" />				
			</div>
	</g:HTMLPanel>
</ui:UiBinder> 