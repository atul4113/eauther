<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:r="urn:import:com.lorepo.iceditor.client.semi.responsive.ui.widgets">
	<ui:style>
	
	</ui:style>

	<g:HTMLPanel styleName="semi-responsive-layouts-editing-form">
		<div class="semi-responsive-layouts-editing-form-list">
			<r:SemiResponsiveLayoutsActionButtonsWidget
				hideCSSButton="true"
				ui:field="actionsButtons">
			</r:SemiResponsiveLayoutsActionButtonsWidget>
			<r:SemiResponsiveLayoutsListWidget
				visibleItemCount="13"  emptyChangeHandler="true"
				ui:field="semiResponsiveList">
			</r:SemiResponsiveLayoutsListWidget>
		</div>

		<div class="semi-responsive-layouts-editing-form-container">
			<div class="semi-responsive-layouts-editing-form-container-inputs">
				<div class="semi-responsive-layout-row">
					<span class="semi-responsive-layout-row-label" ui:field="nameLabel"></span>
					<input type="text" ui:field="nameInput"></input>
				</div>
				<div class="semi-responsive-layout-row">
						<span class="semi-responsive-layout-row-label" ui:field="tresholdLabel"></span>
						<input type="text" ui:field="thresholdInput"></input>
				</div>
				<r:SemiResponsiveOrientationDeviceSelectorWidget ui:field="deviceOrientationWidget">
				</r:SemiResponsiveOrientationDeviceSelectorWidget>
			</div>
			<div class="semi-responsive-editing-layout-row-accept">
				<a class="semi-responsive-editing-layout-save-changes-button" ui:field="saveChangesButton"></a>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 